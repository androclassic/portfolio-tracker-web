generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  emailVerified DateTime?
  name          String?
  image         String?
  username      String?     @unique
  passwordHash  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  accounts      Account[]
  sessions      Session[]
  portfolios    Portfolio[]
  apiKeys       ApiKey[]
  exchangeConnections ExchangeConnection[]
}

model ApiKey {
  id          String    @id @default(cuid())
  name        String    // User-friendly name for the key
  key         String    @unique // The actual API key (hashed for storage)
  keyPrefix   String    // First 8 chars of key for display (e.g., "tk_abc123...")
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastUsedAt  DateTime?
  expiresAt   DateTime? // Optional expiration
  createdAt   DateTime  @default(now())
  revokedAt   DateTime? // Null if active, set when revoked
}

model ExchangeConnection {
  id          String    @id @default(cuid())
  exchange    String    // "crypto-com" | "kraken"
  apiKey      String    // encrypted
  apiSecret   String    // encrypted
  label       String?   // user-friendly name
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, exchange])
  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Transaction {
  id           Int       @id @default(autoincrement())
  type         String // Deposit, Withdrawal, or Swap
  datetime     DateTime
  feesUsd      Float?
  notes        String?
  fromAsset    String?
  fromQuantity Float?
  fromPriceUsd Float?
  toAsset      String
  toQuantity   Float
  toPriceUsd   Float?
  portfolioId  Int
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([portfolioId])
  @@index([portfolioId, datetime])
}

model Portfolio {
  id           Int           @id @default(autoincrement())
  name         String
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@index([userId])
}

model HistoricalPrice {
  id        Int      @id @default(autoincrement())
  asset     String // e.g., "BTC", "ETH"
  date      String // YYYY-MM-DD format
  price_usd Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([asset, date])
  @@index([asset, date])
  @@index([date])
}

model HistoricalExchangeRate {
  id        Int      @id @default(autoincrement())
  fromCurrency String // e.g., "EUR", "USD", "RON"
  toCurrency   String // e.g., "USD", "EUR", "RON"
  date          String // YYYY-MM-DD format
  rate          Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([fromCurrency, toCurrency, date])
  @@index([fromCurrency, toCurrency, date])
  @@index([date])
}

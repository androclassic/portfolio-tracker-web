generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id           Int      @id @default(autoincrement())
  asset        String
  type         String   // Buy or Sell
  priceUsd     Float?
  quantity     Float
  datetime     DateTime
  feesUsd      Float?
  costUsd      Float?
  proceedsUsd  Float?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
